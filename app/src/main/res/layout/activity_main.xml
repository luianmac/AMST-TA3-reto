<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="AMST-TA3-reto"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColorLink="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:onClick="IrAVideo"
            android:text="Luis Macas Lopez" />

        <Button
            android:id="@+id/btnCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viviana Mero" />

        <Button
            android:id="@+id/btnGoogleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="IrAMapa"
            android:text="Allan Orellana" />

        <Button
            android:id="@+id/btnGraficoLineal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="graficoLineal"
            android:text="GrÃ¡fico Lineal" />

        <Button
            android:id="@+id/btnMenuBotonFlotante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>